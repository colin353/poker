{
    "extends": [
      "eslint:recommended",
      "plugin:flowtype/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true,
            "modules": true
          }
    },
    "env": {
      "es6": true,
      "node": true
    },
    "plugins": [
      "react", "flowtype"
    ],
    "rules": {
        "semi": 2,
        "react/jsx-uses-vars": 1
    },
    "globals": { "fetch": true, "Headers": true }
}
